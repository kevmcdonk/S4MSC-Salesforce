{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "connections_twitter_name": {
            "defaultValue": "S4MSCTwitter",
            "type": "String"
        },
        "region": {
            "defaultValue": "uksouth",
            "type": "String"
        }
    },
    "variables": {
        "sites_SearchConnector_name": "[concat(parameters('connections_twitter_name'),'SearchConnector')]",
        "sites_GraphSearchConnector_name": "[concat(parameters('connections_twitter_name'),'GraphSearchConnector')]",
        "workflows_SearchConnectorSetup_name": "[concat('la-',parameters('connections_twitter_name'),'-setup')]",
        "workflows_SearchConnectorSearch_name": "[concat('la-',parameters('connections_twitter_name'),'-search')]",
        "workflows_SearchConnectorTrigger_name": "[concat('la-',parameters('connections_twitter_name'),'-trigger')]",
        "storageAccounts_name": "[replace(toLower(concat('storage',parameters('connections_twitter_name'))),'-','')]",
        "appServicePlan_name": "[concat('appServicePlan-',parameters('connections_twitter_name'))]",
        "searchConnector_name": "[concat('appInsights-',parameters('connections_twitter_name'))]"
    
    },
    "resources": [
        {
            "type": "microsoft.insights/components",
            "apiVersion": "2018-05-01-preview",
            "name": "[parameters('connections_twitter_name')]",
            "location": "uksouth",
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "Request_Source": "rest",
                "RetentionInDays": 90,
                "publicNetworkAccessForIngestion": "Enabled",
                "publicNetworkAccessForQuery": "Enabled"
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[variables('workflows_SearchConnectorSetup_name')]",
            "location": "uksouth",
            "identity": {
                "principalId": "a4a4968c-aa2b-45aa-addf-2bab8358fc91",
                "tenantId": "",
                "type": "SystemAssigned"
            },
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "triggers": {
                        "manual": {
                            "type": "Request",
                            "kind": "Http",
                            "inputs": {
                                "schema": {}
                            }
                        }
                    },
                    "actions": {
                        "Check_SearchConnector_exists": {
                            "runAfter": {},
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "audience": "https://graph.microsoft.com",
                                    "clientId": "",
                                    "secret": "",
                                    "tenant": "",
                                    "type": "ActiveDirectoryOAuth"
                                },
                                "method": "GET",
                                "uri": "[concat('https://graph.microsoft.com/beta/external/connections/',variables('searchConnector_name'))]"
                            }
                        },
                        "Check_schema_exists": {
                            "runAfter": {
                                "Create_SearchConnector_if_doesn't_exist": [
                                    "Succeeded",
                                    "Skipped"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "audience": "https://graph.microsoft.com",
                                    "clientId": "",
                                    "secret": "",
                                    "tenant": "",
                                    "type": "ActiveDirectoryOAuth"
                                },
                                "method": "GET",
                                "uri": "[concat('https://graph.microsoft.com/beta/external/connections/',variables('searchConnector_name'),'/schema')]"
                            }
                        },
                        "Create_SearchConnector_if_doesn't_exist": {
                            "runAfter": {
                                "Check_SearchConnector_exists": [
                                    "Failed"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "audience": "https://graph.microsoft.com",
                                    "clientId": "",
                                    "secret": "",
                                    "tenant": "",
                                    "type": "ActiveDirectoryOAuth"
                                },
                                "body": {
                                    "description": "Connector for showing key tweets",
                                    "id": "[variables('searchConnector_name')]",
                                    "name": "Twitter Connector"
                                },
                                "method": "POST",
                                "uri": "https://graph.microsoft.com/beta/external/connections"
                            }
                        },
                        "Create_schema_if_it_doesn't_exists": {
                            "runAfter": {
                                "Check_schema_exists": [
                                    "Failed"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "authentication": {
                                    "audience": "https://graph.microsoft.com",
                                    "clientId": "",
                                    "secret": "",
                                    "tenant": "",
                                    "type": "ActiveDirectoryOAuth"
                                },
                                "body": {
                                    "baseType": "microsoft.graph.externalItem",
                                    "properties": [
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": true,
                                            "name": "TweetText",
                                            "type": "String"
                                        },
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": true,
                                            "name": "TweetId",
                                            "type": "String"
                                        },
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": false,
                                            "name": "CreatedAt",
                                            "type": "DateTime"
                                        },
                                        {
                                            "isQueryable": false,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": false,
                                            "name": "RetweetCount",
                                            "type": "Int64"
                                        },
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": true,
                                            "name": "TweetedByUserName",
                                            "type": "String"
                                        },
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": true,
                                            "name": "TweetByFullName",
                                            "type": "String"
                                        },
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": true,
                                            "name": "OriginalTweetUserName",
                                            "type": "String"
                                        },
                                        {
                                            "isQueryable": true,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": true,
                                            "name": "OriginalTweetFullName",
                                            "type": "String"
                                        },
                                        {
                                            "isQueryable": false,
                                            "isRefinable": false,
                                            "isRetrievable": true,
                                            "isSearchable": false,
                                            "name": "ProfileImageUrl",
                                            "type": "String"
                                        }
                                    ]
                                },
                                "method": "POST",
                                "uri": "[concat('https://graph.microsoft.com/beta/external/connections/',variables('searchConnector_name'),'/schema')]"
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {}
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('storageAccounts_name')]",
            "location": "uksouth",
